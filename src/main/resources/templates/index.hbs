{{#partial "content"}}
    <h1>Welcome to eticket</h1>
    <div class="row row-cols-3">
    {{#each events}}
        <div class="col mt-2 mb-2">
            <div class="card">
                <img src="{{imageUrl}}" alt="poster" style="width:100%">
                <div>
                    <h1>{{title}}</h1>
                    <p>{{location}}</p>
                    <p>{{eventTime}}</p>
                    <p>{{host}}</p>
                </div>
                <a class="btn btn-light" href="/events/{{id}}">Buy Ticket</a>
            </div>
        </div>
   {{/each }}
    </div>
{{/partial}}
{{> layout.hbs}}